<view class="container">
<text>训练计划</text>
<view class="widget">
<text class="column">计划名称</text>
<text class="link-column">操作</text>
</view>
  <scroll-view scoll-y="true">
    <view class="widget">
      <view wx:for="{{planList}}">
        <text class='column'>{{item.name}}</text>
        <view class='link-column'>
        <navigator class="link" url="../sport/sport?actionId={{index}}" >开始</navigator>|
        <navigator class="link" url="../operation/operation?actionId={{index}}" >编辑</navigator>|
        <text class='link' bindtap='deletePlan' data-index="{{index}}">删除</text>
        </view>
        </view>
    </view>
    
  </scroll-view>
  <button class='button' bindtap="addPlan" type="primary">新增计划</button>
</view>
