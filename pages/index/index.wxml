<!--index.wxml-->
<view class="mainView">
<form class='formView' bindsubmit="formSubmit" bindreset="formReset"  >
<view class="textView">
<text class="head">性别</text>
</view>

<view class="radioView">
<radio-group class='radio' bindchange="radioChange" name='sex'>
<label wx:for="{{sex}}" >
<radio  id="{{item.name}}" value="{{item.name}}" checked="{{item.checked}}" />{{item.value}}
</label>
</radio-group>
</view>
<view class="three" style="flex-direction:row;">
<view class="height">
身高(cm)
<input class="input" type="number" id="height" name="height" placeholder="cm"  />
</view>
<view class="weight">
体重(kg)
<input class="input" type="number" id="weight" name="weight" placeholder="kg"  />
</view>
<view class="age">
年龄(year)
<input class="input" type="number" id="age" name="age" placeholder="year" />
</view>
</view>
<view class="sportView">
<text class="head">运动频次</text>
<image class="icon" src="/images/22.png" bindtap="bindSportHelp"></image>
<picker class="picker" name="sportIndex" bindchange="bindPickerChange" value="{{index}}" range="{{array}}">
<view>
{{array[index]}}
</view>
</picker>

</view>
<view class="cost">
<text class="head">有氧消耗(kcal)</text>
<image class="icon" src="/images/22.png" bindtap="bindAerobicHelp"></image>
<input class="inputlong" type="number" id="aerobic" name="aerobic" placeholder="kcal" />
</view>

<view class="textView">
<text class="head">目的</text>
</view>

<view class="radioView">
<radio-group class='radio' bindchange="goalChange" name='goal'>
<label wx:for="{{goals}}">
<radio value="{{item.name}}" checked="{{item.checked}}" />{{item.value}}
</label>
</radio-group>
</view>
<view class="cost">
<text class="head">热量过剩/热量缺口(kcal)</text>
<image class="icon" src="/images/22.png" bindtap="bindHelp"></image>
<input class="inputlong" type="number" id="energy" name="energy" placeholder="建议:过剩200~500 缺口500~1000 (kcal)" />
<button class='button'form-type="submit" type="primary">查看结果</button>
</view>
</form>

  
</view>
